{
    "mcpServers": {
      "playwright": {
        "command": "npx",
        "args": [
          "@playwright/mcp@latest"
            ]        
        },
        "neo4j-local": {
            "command": "uvx",
            "args": [ "mcp-neo4j-cypher@0.2.4" ],
            "env": {
                "NEO4J_URI": "bolt://localhost:7687",
                "NEO4J_USERNAME": "neo4j",
                "NEO4J_PASSWORD": "password",
                "NEO4J_DATABASE": "neo4j"
            }
        }
    }
}